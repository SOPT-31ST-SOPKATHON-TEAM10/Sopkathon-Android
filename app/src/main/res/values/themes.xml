<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sopkathon10" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.H1.Pretendard22_Bold" parent="">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.H2.Pretendard20_Bold" parent="">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.b1.Pretendard18_SemiBold" parent="">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/pretendard_sb</item>
    </style>

    <style name="TextAppearance.b2.Pretendard13_SemiBold" parent="">
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/pretendard_sb</item>
    </style>

    <style name="TextAppearance.b3.Pretendard16_Medium" parent="">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/pretendard_m</item>
    </style>

    <style name="TextAppearance.b4.Pretendard13_Medium" parent="">
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/pretendard_m</item>
    </style>

    <!-- Style -->
    <style name="Style.CircleImageView.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Style.ImageButton.Basic" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Style.SquareButton" parent="Style.ImageButton.Basic">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Style.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>